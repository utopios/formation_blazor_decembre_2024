<span>@Message</span>


@code {
    private int Price { get; set; }
    private readonly int _hidePrice = new Random().Next(100);
    private string? Message { get; set; }

    private void CheckPrice()
    {
        if (Price < _hidePrice)
        {
            Message = "Plus";
        } else if (Price > _hidePrice)
        {
            Message = "Moins";
        }
        else
        {
            Message = "Correct";
        }
    } 
}